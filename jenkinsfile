pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub-creds' // Jenkins credential ID (username + password/token)
        IMAGE_NAME = 'yourdockerhubusername/spring-petclinic'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sudha-Redrouthu/spring-petclinic.git'
            }
        }

        stage('Build JAR') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def buildTag = "v${env.BUILD_NUMBER}"
                    sh "docker build -t ${IMAGE_NAME}:${buildTag} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    def buildTag = "v${env.BUILD_NUMBER}"
                    withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh "echo $PASSWORD | docker login -u $USERNAME --password-stdin"
                        sh "docker push ${IMAGE_NAME}:${buildTag}"
                    }
                }
            }
        }

        stage('Notify') {
            steps {
                echo "App built and image pushed to Docker Hub"
            }
        }
    }
}
